<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Mongoose Dashboard</title>
</head>
<body>
  <form action='/pigs' method='post'>
      Name: <input type='text' name='name'>
      Age: <input type='text' name='age'>
      <input type='submit' value='Create Pig'>
  </form>

  <h2>Pigs:</h2>

 <% if(typeof(pigs) != 'undefined' ) { %>
  <% for (var x in pigs) { %>
    <p>Name: <%= pigs[x].name %> </p>
    <p>Age: <%= pigs[x].age %> </p>
    <a href="/<%= pigs[x].id %>/edit/">Edit</a>
    <form action="/<%= pigs[x].id %>/delete/" method="post">
      <input type="submit" value="delete">
    </form>
  <% } %>
 <% } %>

<!-- displaying validation errors -->

 <% if(typeof(errors) != 'undefined' ) { %>
     <% for (var x in errors) { %>
      <h3><%= errors[x].message %></h3>
     <% } %>
 <% } %>

</body>
</html>

