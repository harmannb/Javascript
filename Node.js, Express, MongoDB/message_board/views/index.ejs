<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Message Board</title>
</head>
<body>
  <h2>The Dojo Message Board</h2>
  <form action="/messages" method="post">
  Name:<input type="text" name="name">
  Message:<input type="text" name="message">
  <input type="submit" value="Post Message">
  </form>
</body>
</html>


  <% for (var x = 0; x < messages.length; x++) { %>
    <p>Name: <%= messages[x].name %></p>
    <p>Message: <%= messages[x].message %></p>
    <form action="/messages/<%= messages[x].id %>" method="post">
      Name:<input type="text" name="name">
      Comment:<input type="text" name="comment">
      <input type="submit" value="Post Comment">
    </form>
      <% for (var y = 0; y < messages[x].comments.length; y++) { %>
      <p>Name: <%= messages[x].comments[y].name %></p>
      <p>Comment: <%= messages[x].comments[y].comment %></p>
      <% } %>
  <% } %>
